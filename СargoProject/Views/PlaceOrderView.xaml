<UserControl x:Class="СargoProject.Views.PlaceOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:СargoProject.Views"
             mc:Ignorable="d" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="768" d:DesignWidth="1024">

    <Grid>
        
        <Grid
              HorizontalAlignment="Center"
              VerticalAlignment="center"
              Height="600"
              Width="900">

            <Border Background="white"
                    CornerRadius="20"
                    Style="{DynamicResource MaterialDesignToolBarMainPanelBorderStyle}"/>

            <StackPanel>

                <TextBlock FontSize="20"
                           FontWeight="Bold"
                           Margin="5">
                    Enter URl links for your order
                </TextBlock>


                <TextBox Height="35"
                         FontSize="15"
                         Margin="5 0 15 0"
                         md:HintAssist.Hint="ex: www.trendyol.com"
                         md:HintAssist.HintOpacity="0.5"
                         md:TextFieldAssist.HasOutlinedTextField="True"
                         md:TextFieldAssist.UnderlineBrush="Gray"
                         md:TextFieldAssist.DecorationVisibility="Collapsed"
                         md:TextFieldAssist.TextBoxViewMargin="5"
                         md:HintAssist.HelperTextFontSize="10"
                         Text="{Binding Order.Link}"/>

                <Grid Margin="0 20 0 0" Height="312">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
                                Grid.Column="0">

                        <TextBlock FontSize="20"
                           FontWeight="Bold"
                           Margin="5"
                           Text="Size">

                        </TextBlock>


                        <TextBox Height="35"
                         FontSize="15"
                         Margin="5 0 15 0"
                         md:HintAssist.Hint="ex: S"
                         md:HintAssist.HintOpacity="0.5"
                         md:TextFieldAssist.HasOutlinedTextField="True"
                         md:TextFieldAssist.UnderlineBrush="Gray"
                         md:TextFieldAssist.DecorationVisibility="Collapsed"
                         md:TextFieldAssist.TextBoxViewMargin="5"
                         md:HintAssist.HelperTextFontSize="10"
                         md:HintAssist.HelperText="required field"
                         Text="{Binding Order.Size}"/>

                    </StackPanel>

                    <StackPanel Grid.Row="0"
                                Grid.Column="1">

                        <TextBlock FontSize="20"
                           FontWeight="Bold"
                           Margin="5"
                           Text="Colour">

                        </TextBlock>


                        <TextBox Height="35"
                         FontSize="15"
                         Margin="5 0 15 0"
                         md:HintAssist.Hint="ex: black"
                         md:HintAssist.HintOpacity="0.5"
                         md:TextFieldAssist.HasOutlinedTextField="True"
                         md:TextFieldAssist.UnderlineBrush="Gray"
                         md:TextFieldAssist.DecorationVisibility="Collapsed"
                         md:TextFieldAssist.TextBoxViewMargin="5"
                         md:HintAssist.HelperTextFontSize="10"
                         md:HintAssist.HelperText="required field"
                         Text="{Binding Order.Colour}"/>

                    </StackPanel>

                    <StackPanel Grid.Row="0"
                                Grid.Column="2">

                        <TextBlock FontSize="20"
                           FontWeight="Bold"
                           Margin="5"
                           Text="Special notes">

                        </TextBlock>


                        <TextBox Height="35"
                         FontSize="15"
                         Margin="5 0 15 0"
                         md:HintAssist.Hint="Special notes"
                         md:HintAssist.HintOpacity="0.5"
                         md:TextFieldAssist.HasOutlinedTextField="True"
                         md:TextFieldAssist.UnderlineBrush="Gray"
                         md:TextFieldAssist.DecorationVisibility="Collapsed"
                         md:TextFieldAssist.TextBoxViewMargin="5"
                         md:HintAssist.HelperTextFontSize="10"
                         Text="{Binding Order.SpecialNotes}"/>

                    </StackPanel>

                    <StackPanel Grid.Row="1"
                                Grid.Column="0">

                        <TextBlock FontSize="20"
                           FontWeight="Bold"
                           Margin="5"
                           Text="Quantity">

                        </TextBlock>


                        <TextBox Height="35"
                         FontSize="15"
                         Margin="5 0 15 0"
                         md:HintAssist.Hint="ex: 1"
                         md:HintAssist.HintOpacity="0.5"
                         md:TextFieldAssist.HasOutlinedTextField="True"
                         md:TextFieldAssist.UnderlineBrush="Gray"
                         md:TextFieldAssist.DecorationVisibility="Collapsed"
                         md:TextFieldAssist.TextBoxViewMargin="5"
                         md:HintAssist.HelperTextFontSize="10"
                         md:HintAssist.HelperText="required field"
                         Text="{Binding Order.Quantity}"/>

                    </StackPanel>

                    <StackPanel Grid.Row="1"
                                Grid.Column="1">

                        <TextBlock FontSize="20"
                           FontWeight="Bold"
                           Margin="5"
                           Text="Price (TL)">

                        </TextBlock>


                        <TextBox Height="35"
                         FontSize="15"
                         Margin="5 0 15 0"
                         md:HintAssist.Hint="ex: 100"
                         md:HintAssist.HintOpacity="0.5"
                         md:TextFieldAssist.HasOutlinedTextField="True"
                         md:TextFieldAssist.UnderlineBrush="Gray"
                         md:TextFieldAssist.DecorationVisibility="Collapsed"
                         md:TextFieldAssist.TextBoxViewMargin="5"
                         md:HintAssist.HelperTextFontSize="10"
                         md:HintAssist.HelperText="required field"
                         Text="{Binding Order.Price}"/>

                    </StackPanel>


                    <StackPanel Grid.Row="1"
                                Grid.Column="2">

                        <TextBlock FontSize="20"
                           FontWeight="Bold"
                           Margin="5"
                           Text="Shop delivery price (TL)">

                        </TextBlock>


                        <TextBox Height="35"
                         FontSize="15"
                         Margin="5 0 15 0"
                         md:HintAssist.Hint="0"
                         md:HintAssist.HintOpacity="0.5"
                         md:TextFieldAssist.HasOutlinedTextField="True"
                         md:TextFieldAssist.UnderlineBrush="Gray"
                         md:TextFieldAssist.DecorationVisibility="Collapsed"
                         md:TextFieldAssist.TextBoxViewMargin="5"
                         md:HintAssist.HelperTextFontSize="10"
                         md:HintAssist.HelperText="required field"
                         Text="{Binding Order.DeliveryPrice}"/>

                    </StackPanel>



                </Grid>

                <Button Grid.Row="4"
                             Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Height="50"
                        Width="200"
                            Command="{Binding ConfirmButton}"
                        Margin="10" Style="{DynamicResource MaterialDesignPaperSecondaryDarkButton}"
                        Background="MediumSeaGreen"
                        Foreground="AliceBlue"
                        Content="Confirm"
                        FontSize="30"
                         VerticalAlignment="Bottom">

                </Button>
                <Button Grid.Row="4"
                             Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Height="50"
                        Width="200"
                            Command="{Binding CancelButton}"
                        Margin="10" Style="{DynamicResource MaterialDesignPaperSecondaryDarkButton}"
                        Background="MediumSeaGreen"
                        Foreground="AliceBlue"
                        Content="Cancel"
                        FontSize="30"
                         VerticalAlignment="Bottom">

                </Button>

            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
